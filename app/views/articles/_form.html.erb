<%=form_for(@article,url: choose_new_or_edit) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= @article.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
 <%= f.label:content%>
 <%= f.text_field:content%>
 <br>
 <%= f.submit %>
 <% end %>
 
